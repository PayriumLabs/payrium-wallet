# ===========================================
# Payrium Phase 1 MVP - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -----------------------------------------
# Blockchain Configuration
# -----------------------------------------

# BSC Mainnet RPC URL
NEXT_PUBLIC_BSC_RPC_URL=https://bsc-dataseed.binance.org/

# BSC Testnet RPC URL (for development)
NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Active network: 'mainnet' or 'testnet'
NEXT_PUBLIC_ACTIVE_NETWORK=testnet

# -----------------------------------------
# Token Configuration
# -----------------------------------------

# PUM Token Contract Address on BSC
# TODO: Update with actual PUM token contract address
NEXT_PUBLIC_PUM_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000

# Default token list (JSON array of token addresses to show in portfolio)
NEXT_PUBLIC_DEFAULT_TOKENS=[]

# -----------------------------------------
# DAO Configuration
# -----------------------------------------

# Admin Wallet Address (only this address can create proposals)
# TODO: Update with your admin wallet address
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Proposal duration in seconds (default: 3 days = 259200)
NEXT_PUBLIC_PROPOSAL_DURATION=259200

# -----------------------------------------
# Supabase Configuration
# -----------------------------------------

# Supabase Project URL
# TODO: Update with your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (public - safe to expose)
# TODO: Update with your Supabase anon key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# -----------------------------------------
# Swap Configuration
# -----------------------------------------

# DEX API endpoint (PancakeSwap or 1inch)
NEXT_PUBLIC_DEX_API=https://api.1inch.dev/swap/v6.0/56

# 1inch API Key (optional, for higher rate limits)
NEXT_PUBLIC_1INCH_API_KEY=

# -----------------------------------------
# App Configuration
# -----------------------------------------

# App Name
NEXT_PUBLIC_APP_NAME=Payrium

# App Version
NEXT_PUBLIC_APP_VERSION=1.0.0-beta

# Enable/Disable features (for gradual rollout)
NEXT_PUBLIC_FEATURE_SWAP_ENABLED=true
NEXT_PUBLIC_FEATURE_DAO_ENABLED=true

# -----------------------------------------
# Security Configuration
# -----------------------------------------

# Encryption iterations for PBKDF2 (higher = more secure but slower)
# Recommended: 100000 for production
NEXT_PUBLIC_ENCRYPTION_ITERATIONS=100000

# Session timeout in milliseconds (default: 5 minutes = 300000)
NEXT_PUBLIC_SESSION_TIMEOUT=300000

# -----------------------------------------
# Analytics (Optional)
# -----------------------------------------

# Analytics endpoint (leave empty to disable)
NEXT_PUBLIC_ANALYTICS_ENDPOINT=
